    <!-- Script for changing status of coupon -->
    <script>
        const changeStatus = document.querySelectorAll('.restrict-btn');
        changeStatus.forEach((btn) => {
            btn.addEventListener('click', async (event) => {
                event.preventDefault();
                const couponId = btn.getAttribute('data-couponId')

                if (couponId) {
                    const response = await fetch(`/admin/coupon/restrict/${couponId}`);
                    const result = await response.json();

                    if (result.status === 'success') {
                        Swal.fire({
                            title: "Status changed successfully",
                            icon: 'success',
                            timer: 2000,
                            customClass: {
                                title: 'sweetalertee-title', // Add a custom class to the title
                            }
                        })
                        setTimeout(() => {
                            location.href = location.href;
                        }, 2000);
                    } else {
                        Swal.fire({
                            title: "An error occured please try again",
                            icon: 'error',
                            timer: 2000, 
                            customClass: {
                                title: 'sweetalertee-title', // Add a custom class to the title
                            }
                        })
                    }
                }

            })
        })
    </script>
