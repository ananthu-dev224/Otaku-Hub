      <!-- Cards for product display-->
      <div class="py-3 py-md-5 bg-light">
        <div class="container cnt">
            <div class="row">
                <div class="col-md-12">
                 <center><h4 class="mb-4 fw-bold">Products in <%= category.name%> Category</h4></center>   
                </div>
                <div class="col-md-12">
                    <center><h6 class="mb-4 fw-normal text-secondary">Quality is our top priority. Enjoy products that meet the highest standards.</h6></center>   
                   </div>
                <% category.products.forEach((product) => {%>

                 <% if(product.isPublished){%>
                <div class="col-lg-3 col-md-4 col-sm-6 col-12">
               
                    <div class="product-card">
                        <div class="product-card-img-fluid">
                            <% if (product.quantity && Array.isArray(product.quantity)) { %>
                                <% var inStock = product.quantity.some(item => item.stock > 0); %>
                                <% if (inStock) { %>
                                    <label class="stock bg-success">In Stock</label>
                                <% } else { %>
                                    <label class="stock bg-danger">Out of Stock</label>
                                <% } %>
                            <% }%>
                            <img src="<%= product.mainimage%>" alt="mainimage" class="img-fluid">
                        </div>
                        <div class="product-card-body">
                            <p class="product-brand"><%= category.name%></p>
                            <h5 class="product-name">
                               <a href="/product-view/<%= product._id%>">
                                    <%= product.name%> 
                               </a>
                            </h5>
                            <div>
                                <span class="selling-price">&#8377;<%= product.price%></span>
                                <% if(product.discount){%>
                                    <span class="original-price"><%= product.discount%>% Discount</span>
                                <%}%>    
                            </div>
                            <div class="mt-2">
                                <a href="" class="btn btn1">Add To Cart</a>
                                <a href="" class="btn btn1"> <i class="fa fa-heart"></i> </a>
                                <a href="/product-view/<%= product._id%>" class="btn btn1"> View </a>
                            </div>
                        </div>
                    </div>
                   
                </div>
                <%}%>
                <%})%>    
           </div>
        </div>
    </div>



