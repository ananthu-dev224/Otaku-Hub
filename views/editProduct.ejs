            </div>
        </header>
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Edit Product</h2>


                </div>
                <div>
                    <a href="/admin/products" class="btn btn-primary">Back to Products</a>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3">

                </div>
                <div class="col-lg-3">

                </div>
                <div class="col-lg-3">

                </div>
                <div class="col-lg-3">

                </div>
            </div>
            <div class="row">
                <div class="col-xl-8 col-lg-12">

                    <div class="card mb-4">



                        <div class="card-body">
                            <div class="table-responsive">
                                <form action="/admin/products/edit/<%= product._id%>" method="post"
                                    enctype="multipart/form-data" id="form">
                                    <div class="form-row align-items-center">
                                        <div class="col-auto">
                                            <label class="sr-only" for="inlineFormInput">Name of Product</label><br><br>
                                            <input type="text" class="form-control mb-2" id="name" name="name"
                                                placeholder="<%= product.name%>">
                                        </div><br>
                                        <div class="col-auto">
                                            <label class="sr-only" for="category">Category :</label>

                                            <select class="form-select mb-2" id="category" name="category">
                                                <option value="" selected disabled>
                                                    <%= product.category.name%>
                                                </option>
                                                <% categories.forEach((category)=> {%>
                                                    <option value="<%= category.name%>">
                                                        <%= category.name%>
                                                    </option>
                                                    <%})%>
                                            </select>

                                        </div>


                                        <div class="col-auto">
                                            <label for="Description">Description</label><br><br>
                                            <textarea class="form-control" id="description" rows="3" name="description"
                                                placeholder="<%= product.description%>"></textarea>
                                        </div><br>
                                        <% if(product.categories==='Outfits' )%>
                                            <div id="clothesForm" style="display: none;">
                                                <div class="row">
                                                    <div class="col">
                                                        <h6>Small :</h6>
                                                    </div>
                                                    <div class="col">
                                                        <% if(product.category.name==='Outfits' &&
                                                            product.quantity[0].stock !==null){%>
                                                            <input type="Number" class="form-control"
                                                                placeholder="<%= product.quantity[0].stock%>"
                                                                value="<%= product.quantity[0 ].stock%>"
                                                                name="stocks[]">
                                                            <%}else{%>
                                                                <input type="Number" class="form-control"
                                                                    placeholder="Stock of Size S" name="stocks[]">
                                                                <%}%>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col">
                                                        <h6>Medium :</h6>
                                                    </div>
                                                    <div class="col">
                                                        <% if(product.category.name==='Outfits' &&
                                                            product.quantity[0].stock !==null ){%>
                                                            <input type="Number" class="form-control"
                                                                value="<%= product.quantity[1].stock%>"
                                                                placeholder="<%= product.quantity[1].stock%>"
                                                                name="stocks[]">
                                                            <%}else{%>
                                                                <input type="Number" class="form-control"
                                                                    placeholder="Stock of Size M" name="stocks[]">
                                                                <%}%>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col">
                                                        <h6>Large :</h6>
                                                    </div>
                                                    <div class="col">
                                                        <% if(product.category.name==='Outfits' &&
                                                            product.quantity[0].stock !==null){%>
                                                            <input type="Number" class="form-control"
                                                                value="<%= product.quantity[2].stock%>"
                                                                placeholder="<%= product.quantity[2].stock%>"
                                                                name="stocks[]">
                                                            <%}else{%>
                                                                <input type="Number" class="form-control"
                                                                    placeholder="Stock of Size L" name="stocks[]">
                                                                <%}%>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col">
                                                        <h6>Extra Large :</h6>
                                                    </div>
                                                    <div class="col">
                                                        <% if(product.category.name==='Outfits' &&
                                                            product.quantity[0].stock !==null){%>
                                                            <input type="Number" class="form-control"
                                                                value="<%= product.quantity[3].stock%>"
                                                                placeholder="<%= product.quantity[3].stock%>"
                                                                name="stocks[]">
                                                            <%}else{%>
                                                                <input type="Number" class="form-control"
                                                                    placeholder="Stock of Size XL" name="stocks[]">
                                                                <%}%>
                                                    </div>
                                                </div>
                                            </div>


                                            <div class="col-auto" id="otherForm" display="none">
                                                <label class="sr-only" for="inlineFormInput">Quantity :</label><br><br>
                                                <label class="sr-only" for="inlineFormInput">Stock</label>
                                                <input type="number" class="form-control mb-2" id="stock" name="stock"
                                                    placeholder="<%= product.quantity[0].stock%>"
                                                    value="<%= product.quantity[0].stock%>"><br>
                                            </div><br><br>

                                            <div class="col-auto">
                                                <label class="sr-only" for="price">Price</label><br><br>
                                                <input type="number" class="form-control mb-2" id="price" name="price"
                                                    placeholder="<%= product.price%>">
                                            </div><br>
                                            <div class="col-auto">
                                                <label class="sr-only" for="price">Discount</label><br><br>
                                                <input type="number" class="form-control mb-2" id="discount"
                                                    name="discount" placeholder="<%= product.discount%>">
                                            </div><br>
                                            <div class="col-auto">
                                                <label class="sr-only" for="main-image">Main Image</label><br><br>
                                                <input type="file" class="form-control-file" id="main-img"
                                                    name="mainimage" accept=".jpg, .jpeg, .png, .webp">
                                                <!-- CROP -->
                                            </div><br>
                                            <div class="col-auto">
                                                <label class="sr-only" for="additional-img">Additional images (maximum :
                                                    4)</label><br><br>
                                                <input type="file" id="additional-img" name="additionalimage"
                                                    accept=".jpg, .jpeg, .png, .webp" multiple>
                                                <!-- CROP -->

                                            </div><br>
                                            <div class="col-auto">
                                                <center><button type="submit" class="btn btn-primary mb-2"
                                                        onclick="saveChanges(event)">Save Changes</button></center>
                                            </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- Table ends here -->

                    <div class="pagination-area mt-30 mb-50">

                    </div>
        </section> <!-- content-main end// -->
        <footer class="main-footer font-xs">
            <div class="row pb-30 pt-15">
                <div class="col-sm-6">
                    <script>
                        document.write(new Date().getFullYear())
                    </script> Â© Otaku Hub Administrator
