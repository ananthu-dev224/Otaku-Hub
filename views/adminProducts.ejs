            <div class="card mb-4">
                <header class="card-header">
                    <h4 class="card-title">Products List :</h4>
                    <div class="row align-items-center">
                        <div class="col-md-3 col-12 me-auto mb-md-0 mb-3">
            
                        </div>
                    </div>
                </header>


                <!-- Table for recent orders starts here -->

                <div class="card-body">
                    <div class="table-responsive">
                            <table class="table table-bordered align-middle table-nowrap mb-0" >
                                <thead class="table-light">
                                    <tr>
                                        <th class="align-middle" scope="col">Name</th>
                                        <th class="align-middle" scope="col">Category</th>
                                        <th class="align-middle" scope="col">Description</th>
                                        <th class="align-middle" scope="col">Size</th>
                                        <th class="align-middle" scope="col">Stock</th>
                                        <th class="align-middle" scope="col">Price</th>
                                        <th class="align-middle" scope="col">Discount</th>
                                        <th class="align-middle" scope="col">Status</th>
                                        <th class="align-middle" scope="col">Restrict</th>
                                        <th class="align-middle" scope="col">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                        <% products.forEach(product => {%>
                                           <tr>
                                                <td><%= product.name%></td>

                                                <td><%= product.category.name%></td>

                                                <td><%= product.description%></td>

                                                <td>
                                                <% for (let i = 0; i < product.quantity.length; i++) { %>
                                                    <% if(product.quantity[i].size !== null){ %>
                                                    <!-- Accessing size for each item in the array -->
                                               <%= product.quantity[i].size%> <br>
                                                <%}%>
                                                <%}%>
                                                </td>
                                               <td>
                                               <% for (let i = 0; i < product.quantity.length; i++) { %>
                                                <!-- Accessing stock for each item in the array -->
                                               <%= product.quantity[i].stock%> <br>
                                               <% } %>
                                               </td>
                                           
                                                </td>
                                                   
                                                <td><%= product.price%></td>

                                                <td><%= product.discount%></td>

                                                <td> <p   style="color: <%= product.isPublished ? 'green' : 'rgb(173, 12, 12)' %>" class="fw-bold"><%= product.isPublished ? 'Active' : 'Inactive'%></p></td>

                                                <td>
                                                    <a href="/admin/products/restrict/<%= product._id %>" id="restrict" title="<%= product.isPublished ? 'Unpublish' : 'Publish' %>"
                                                      class="fw-bold text-warning" >
                                                        <%= product.isPublished ? 'Unpublish' : 'Publish' %>
                                                    </a>
                                                </td>

                                                <td>
                                                    <a href="/admin/products/edit/<%= product._id %>" id="edit" class="fw-bold text-primary" >
                                                          Edit
                                                    </a><hr>
                                                    <a href="/admin/products/remove/<%= product._id %>" id="delete" onclick="confirmDelete(event)">
                                                        <img width="25" height="25" src="https://img.icons8.com/color/48/delete-forever.png" alt="delete-forever"/>
                                                  </a>
                                                </td>                    
                                           </tr>
                                            <%})%>
