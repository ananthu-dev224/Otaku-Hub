        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Banners</h2>


                </div>
                <div>
                    <a href="/admin/banners/add" class="btn btn-primary"><i
                            class="text-muted material-icons md-post_add"></i>Add Banner</a>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3">

                </div>
                <div class="col-lg-3">

                </div>
                <div class="col-lg-3">

                </div>
                <div class="col-lg-3">

                </div>
            </div>
            <div class="row">
                <div class="col-xl-8 col-lg-12">

                    <div class="card mb-4">
                        <header class="card-header">
                            <h4 class="card-title">Available Banners :</h4>
                            <div class="row align-items-center">
                                <div class="col-md-3 col-12 me-auto mb-md-0 mb-3">

                                    <div class="col-md-3 col-12 me-auto mb-md-0 mb-3">

                                    </div>
                                </div>
                        </header>


                        <!-- Table for recent orders starts here -->

                        <div class="card-body" style="display: flex; flex-wrap: wrap; justify-content: space-evenly;">
                            <% for(let i=0; i < banners.length; i++){%>
                                <div class="card" style="width: 18rem;">
                                    <img src="<%- banners[i].banner%>" class="card-img-top" alt="Banner">
                                    <div class="card-body">
                                        <h5 class="card-title">Banner <%- i+1 %></h5>
                                        <p
                                            class="<%= banners[i].isActive ? 'badge badge-pill badge-soft-success' :  'badge badge-pill badge-soft-danger' %>">
                                            <%= banners[i].isActive ? 'Active' : 'Inactive' %>
                                        </p>
                                        <p class="card-text"></p>
                                        <a href="/admin/banners/restrict?bannerId=<%= banners[i]._id%>"
                                            class="btn btn-primary restrict-btn" data-bannerId="<%= banners[i]._id %>">
                                            <%= banners[i].isActive ? 'Unpublish' : 'Publish' %>
                                        </a>
                                    </div>
                                </div>
                                <%}%>

                        </div>
                    </div>
                </div>
                <!-- Table ends here -->

        </section> <!-- content-main end// -->
