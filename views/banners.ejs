        </footer>
    </main>
    <!-- Sweet alert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Script for changing status of coupon -->
    <script>
        const changeStatus = document.querySelectorAll('.restrict-btn');
        changeStatus.forEach((btn) => {
            btn.addEventListener('click', async (event) => {
                event.preventDefault();
                const bannerId = btn.getAttribute('data-bannerId')

                if (bannerId) {
                    const response = await fetch(`/banners/restrict?bannerId=${bannerId}`);
                    const result = await response.json();


                    if (result.status === 'success') {
                        Swal.fire({
                            title: "Status changed successfully",
                            icon: 'success',
                            timer: 2000,
                            customClass: {
                                title: 'sweetalertee-title', // Add a custom class to the title
                            }
                        })
                        setTimeout(() => {
                            location.href = location.href;
                        }, 2000);
                    } else {
                        Swal.fire({
                            title: "An error occured please try again",
                            icon: 'error',
                            timer: 2000,
                            customClass: {
                                title: 'sweetalertee-title', // Add a custom class to the title
                            }
                        })
                    }
                }

            })
        })
    </script>
